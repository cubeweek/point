<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.musinsa.payment.point.policy.repository.PointPolicyRepository">
    <select id="selectPointPolicy" parameterType="String" resultType="com.musinsa.payment.point.policy.model.PointPolicy">
        SELECT * FROM POINT_POLICY
        WHERE POLICY_NAME = #{policyName}
    </select>

    <select id="selectPointPolicyPersonal" parameterType="String" resultType="com.musinsa.payment.point.policy.model.PointPolicyPersonal">
        SELECT member_id, max_limit
          FROM POINT_POLICY_PERSONAL
        WHERE MEMBER_ID = #{memberId}
    </select>
</mapper>